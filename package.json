{
  "name": "@wya/mp",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "main": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production node --max_old_space_size=8192 ./scripts/build.js",
    "bootstrap": "./node_modules/.bin/lerna bootstrap --loglevel silly",
    "pub": "./node_modules/.bin/lerna publish --no-git-tag-version",
    "lint-staged": "lint-staged",
    "lint": "esw packages/ --ext .wya,.js --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --fix --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/helper-module-imports": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-regenerator": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@rollup/plugin-buble": "^0.21.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-watch": "^6.0.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "0.11.1",
    "rollup": "^1.31.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-uglify": "^6.0.4"
  },
  "lint-staged": {
    "{packages}/*/src/**/*.{js,jsx,wya}": [
      "esw --fix",
      "git add"
    ],
    "*.md": [
      "esw --ext '.md' --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ]
}
