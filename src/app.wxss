/**
 * g-disabled 
 * 禁用事件
 */

.g-disabled {
	pointer-events: none;
}


/**
 * g-noanimate 
 * 禁用动画
 */

.g-noanimate {
	animation: 0;
}


/**
 * g-oneline 
 * 一行文字
 */

.g-oneline {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
}


/**
 * g-twoline 
 * 两行文字
 */

.g-twoline {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}


/**
 * g-two-lh 
 * 两行文字 限高
 */

.g-two-lh {
	height: 63rpx;
	line-height: 32rpx;
}


/**
 * g-two-lh 
 * 一行文字 限高
 */

.g-one-lh {
	height: 32rpx;
	line-height: 32rpx;
}


/**
 * g-nowrap 
 * 一行文字 强制不换行
 */

.g-nowrap {
	white-space: nowrap;
}


/**
 * g-tc 
 * 文本居中
 */

.g-tc {
	text-align: center;
}


/**
 * g-tl 
 * 文本居左
 */

.g-tl {
	text-align: left;
}


/**
 * g-tr 
 * 文本居右
 */

.g-tr {
	text-align: right;
}


/**
 * g-td-lh 
 * 文本删除线
 */

.g-td-lh {
	text-decoration: line-through;
}


/**
 * g-td-ul 
 * 文本下划线
 */

.g-td-ul {
	text-decoration: underline;
}


