/*layout*/

.g-flex {
	display: flex;
	box-sizing: border-box;
}

.g-fd-c {
	flex-direction: column;
}

.g-fd-re {
	flex-direction: row-reverse;
}

.g-jc-sb {
	justify-content: space-between;
}

.g-jc-c {
	justify-content: center;
}

.g-jc-fe {
	justify-content: flex-end;
}

.g-ai-c {
	align-items: center;
}

.g-ai-fe {
	align-items: flex-end;
}

.g-fw-w {
	flex-wrap: wrap;
}

.g-ac-fs {
	align-content: flex-start;
}


/*gird*/

.g-col {
	flex: 1
}

.g-col-2 {
	flex: 2
}

.g-full {
	flex: 0 0 100%;
}

.g-1of2 {
	flex: 0 0 50%;
}

.g-1of3 {
	flex: 0 0 33.3333%;
}

.g-1of4 {
	flex: 0 0 25%;
}


/*圣杯布局*/

.g-flex-holy {
	display: flex;
	box-sizing: border-box;
	min-height: 100vh;
	flex-direction: column;
}


/*水平垂直对齐*/

.g-flex-cc {
	display: flex;
	justify-content: center;
	align-items: center;
}

.g-flex-ac {
	display: flex;
	box-sizing: border-box;
	align-items: center;
}


