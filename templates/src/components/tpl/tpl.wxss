.c-tpl {
    position: relative;
  }
.c-tpl__text {
    position: absolute;
    top: -0.8em;
    right: 0px;
    height: 1.6em;
    min-width: 1.6em;
    line-height: 1.6;
    padding: 0 .4em;
    font-size: 20px;
    border-radius: .8em;
    background: #f44;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    transform: translateX(50%) scale(0.5);
    transform-origin: center;
    z-index: 10;
    box-shadow: 0 0 0 2px #fff;
    box-sizing: border-box;
}